@{
    ViewData["Title"] = "Home Page";
}
@model Kisi
<div class="text-center">
    <div>
        <p>Ad: @Model.Ad</p>
        <p>Soyad: @Model.Soyad</p>
        <p>Yaş: @Model.Yas</p>
    </div>
    <h4>Model Post ile Yollama</h4>
    @using (Html.BeginForm())
    {
        <div>Ad: @Html.TextBoxFor(model => model.Ad)</div>
        <div>Soyad: @Html.TextBoxFor(model => model.Soyad)</div>
        <div>Yaş: @Html.TextBoxFor(model => model.Yas)</div>
        <input type="submit" value="Formu Gönder" />
    }
</div>
