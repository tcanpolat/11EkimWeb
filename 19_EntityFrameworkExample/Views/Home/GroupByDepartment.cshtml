@model IEnumerable<GroupedStudentViewModel>
<h1>Bölümlere Göre Öğrenciler</h1>
<div class="text-center">
    @foreach (var group in Model)
    {
        <h2>@group.Department</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>Adı</th>
                    <th>Yaşı</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var student in group.Students)
                {
                    <tr>
                        <td>@student.Name</td>
                        <td>@student.Age</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>